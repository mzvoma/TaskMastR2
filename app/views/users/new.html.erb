<div class="page-header">
  <h1>Sign Up</h1>
</div>

<form action="/users/create" class="col-md-4">

  <div class="form-group">
    <label class="control-label">First Name:</label>
    <input name="first_name" type="text" class="form-control input-md" placeholder="Your first name...">
  </div>

  <div class="form-group">
    <label class="control-label">Last Name:</label>
    <input name="last_name" type="text" class="form-control input-md" placeholder="Your last name...">
  </div>

  <div class="form-group">
    <label class="control-label">Email Address</label>
    <input name="email" type="text" class="form-control input-md" placeholder="abc@xyz.com...">
  </div>

  <div class="form-group">
    <label>Password:</label>
    <input name="password" type="password" class="form-control input-md" placeholder="Choose a password that you'll remember">
  </div>

  <button type="submit" class="btn btn-success btn-md">Sign Me Up!</button>
  or
  <%= link_to "Cancel", "/" %>
</form>
