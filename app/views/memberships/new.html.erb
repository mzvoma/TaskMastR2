<div class="page-header">
  <h1>Add Members to Your Project</h1>
</div>

<% if @user.present? %>
<% user_projects = @user.projects %>
<form action="/memberships/create">
  <div class="form-group">
    <label>Select Project </label>
     <select name="project_id" class="form-control input-md">
      <% user_projects.all.each do |project| %>
        <option value="<%= project.id %>"><%= project.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label>Select User </label>
     <select name="user_id" class="form-control input-md">
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.first_name %></option>
      <% end %>
    </select>
  </div>

  <button type="submit" class="btn btn-success btn-md">Create</button>
  or
  <a href="/tasks">Cancel</a>
</form>

<% end %>

