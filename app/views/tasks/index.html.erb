<div class="jumbotron">
  <% if @user.present? %>
  <% task_group = @user.tasks %>
    <h1>Hello, <%= @user.first_name %>!</h1>
  <p>You have <%= task_group.count %> tasks on your plate. Let's get cranking...</p>
  <p><a href="/tasks/new" class="btn btn-primary btn-lg" role="button">Create a Task &raquo;</a></p>
</div>
<h1>Your Tasks</h1>
 <div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Project</th>
        <th>Task</th>
        <th>Due Date</th>
        <th>Edit</th>
      </tr>
    </thead>

    <% task_group = @user.tasks %>
    <% task_group.each do |task| %>
      <tbody>
      <tr>
        <td><a href="/tasks?proj=<%= task.project.name %>"><%= task.project.name %></a></td>
        <td><a href="/tasks/<%=task.id %>/show"><%= task.name %></a></td>
        <td><%= task.due %></a></td>
        <td><%= link_to "Edit", "/tasks/#{task.id}/edit?ref=home" %> |
                <%= link_to "Delete", "/tasks/#{task.id}/delete" %>
       </tr>
    </tbody>
    <% end %>
    </table>
  <% else %>
  <h1>Hello Taskfinder!</h1>
    <p>Sign up to become a Taskmaster or sign in to access your tasks</p>
    <p><a href="/users/new" class="btn btn-primary btn-lg" role="button">Sign Up &raquo;</a></p>
  <% end %>
</div>


